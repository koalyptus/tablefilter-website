<style data-config>
    /** sticky headers overrides example */
    .TF.sticky th {
        /* override to position sticky headers underneath page header element */
        top: 51px !important;
    }
</style>

<script data-config>
    var tfConfig = {
        base_path: 'tablefilter/',
        sticky_headers: true,
        col_widths: [
            "180px", "120px", "120px",
            null, null, null,
            null, null, null
        ],
        alternate_rows: true,
        rows_counter: true,
        btn_reset: true,
        status_bar: true,
        col_0: 'multiple',
        col_1: 'select',
        col_2: 'checklist'
    };
    var tf = new TableFilter('demo', tfConfig);
    tf.init();
</script>

